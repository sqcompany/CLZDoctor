@using CLZDoctor.Entities
@{
    ViewBag.Title = "编辑方剂";
    Layout = "~/Areas/ManageSystem/Views/Shared/_Layout.cshtml";
}
<style>
    * {
        font-family: 'Microsoft YaHei';
        font-size: 12px;
    }

    .rowdiv {
        padding: 5px;
    }
</style>
@{
    var pres = ViewBag.Data as Prescription;
}
@using (Html.BeginForm("Save", "Prescription", FormMethod.Post))
{
    <input type="hidden" name="Id" value="@pres.Id" />
    <div class="rowdiv">
        <label>名称：</label>
        <input type="text" name="Name" class="easyui-validatebox easyui-textbox" style="width: 300px; height: 30px;" data-options="required:true" value="@pres.Name" />
    </div>
    <div class="rowdiv">
        <label>别名：</label>
        <input type="text" name="Alias" class=" easyui-textbox" style="width: 300px; height: 30px; " value="@pres.Alias" />
    </div>
    <div class="rowdiv">
        <label>组成：</label>
        <input name="MakeUp" class="easyui-textbox" style="width:500px;height:100px;" data-options="multiline:true" value="@pres.MakeUp" />
    </div>
    <div class="rowdiv">
        <label>功效：</label>
        <input name="Effect" class="easyui-textbox" style="width:500px;height:100px;" data-options="multiline:true" value="@pres.Effect" />
    </div>
    <div class="rowdiv">
        <label>用法：</label>
        <input name="Usage" class="easyui-textbox" style="width:500px;height:100px;" data-options="multiline:true" value="@pres.Usage" />
    </div>
    <div class="rowdiv">
        <label>方解：</label>
        <input name="Explain" class="easyui-textbox" style="width:500px;height:100px;" data-options="multiline:true" value="@pres.Explain" />
    </div>
    <div class="rowdiv">
        <label>方歌：</label>
        <input name="FangGe" class="easyui-textbox" style="width:500px;height:100px;" data-options="multiline:true" value="@pres.FangGe" />
    </div>
    <div class="rowdiv">
        <label>注意：</label>
        <input name="Notes" class="easyui-textbox" style="width:500px;height:100px;" data-options="multiline:true" value="@pres.Notes" />
    </div>
    <div class="rowdiv">
        <label>来源：</label>
        <input name="Source" class="easyui-textbox" style="width:500px;height:100px;" data-options="multiline:true" value="@pres.Source" />
    </div>
    <div class="rowdiv">
        <label>备注：</label>
        <input name="Remark" class="easyui-textbox" style="width:500px;height:100px;" data-options="multiline:true" value="@pres.Remark" />
    </div>
}
<div class="rowdiv">
    <a href="javascript:void(0)" class="easyui-linkbutton" onclick="$('form').submit()" data-options="iconCls:'icon-save'">保存</a>
</div>



@{
    ViewBag.Title = "添加方剂";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<style>
    h2 {
        margin-top: 20px;
    }

    label {
        font-size: 12px;
        font-family: 'Microsoft YaHei UI';
    }
</style>
<h2>添加方剂</h2>
@using (Html.BeginForm("AddPrescription", "Prescription", FormMethod.Post))
{
    <div style="padding:10px;">
        <div><label>名称：</label><input type="text" name="name" /></div>
        <div><label>别名：</label><input type="text" name="alias" /></div>
        <div><label>组成：</label><textarea name="makeup"></textarea> </div>
        <div><label>功用：</label><textarea name="effect"></textarea> </div>
        <div><label>备注：</label><textarea name="remark"></textarea></div>
        <input type="submit" id="btn_add" value="保存" />
    </div>
}

